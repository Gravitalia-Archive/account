---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";

const locale = `; ${Astro.request.headers.get("cookie")}`?.split(`; locale=`)[1]?.split(";")[0] ||
Astro.request.headers.get("accept-language")?.split(",")[0]?.split("-")[0] ||
"en";

import { t } from "../../Translator";
---

<Layout title={t("tos", locale) + " - Gravitalia Account"} absolute={false}>
    <Navbar />
    <div class="w-5/6 md:w-2/3 ml-8 md:ml-96 md:pr-16 text-dark dark:text-white">
        <br />
        <h1 class="text-4xl font-bold text-center">{t("tos", locale)}</h1>
        <br />

        <p><b>{t("tos_date", locale)}</b> 09/09/2022</p>
        <br />

        <p set:html={t("tos_welcome", locale)}></p>
        <br />
        <br />

        <h2 class="underline text-3xl font-bold">{t("Definitions", locale)}</h2>
        <p class="mt-3" set:html={t("tos_definitions", locale)}></p>
        <br />

        <h2 class="underline text-3xl font-bold">{t("Legal notice", locale)}</h2>
        <p class="mt-3" set:html={t("tos_legal", locale)}></p>
        <br />

        <div class="hidden">
            <h2 class="underline text-3xl font-bold">{t("Who are we", locale)}</h2>
            <p class="mt-3" set:html={t("tos_us", locale)}></p>
            <br />
        </div>

        <h2 class="underline text-3xl font-bold">{t("Use of our Services", locale)}</h2>
        <p class="mt-3" set:html={t("tos_use_services", locale)}></p>
        <br />

        <h2 class="underline text-3xl font-bold">{t("What you can expect from us", locale)}</h2>
        <p class="mt-3" set:html={t("tos_expect", locale)}></p>
        <br />

        <h2 class="underline text-3xl font-bold">{t("What we expect from you", locale)}</h2>
        <p class="mt-3" set:html={t("tos_expect_you", locale)}></p>
        <br />

        <h2 class="underline text-3xl font-bold">{t("Conditions of access to the API", locale)}</h2>
        <br />
        <h3 class="font-bold ml-8 text-lg">{t("a. Introduction", locale)}</h3>
        <p class="mt-3" set:html={t("tos_a_intro", locale)}></p>
        
        <br />
        <h3 class="font-bold ml-8 text-lg">{t("b. Restrictions", locale)}</h3>
        <p class="mt-3" set:html={t("tos_b_restrictions", locale)}></p>

        <br />
        <h3 class="font-bold ml-8 text-lg">{t("c. Respect for data", locale)}</h3>
        <p class="mt-3" set:html={t("tos_c_data", locale)}></p>

        <br />
        <h3 class="font-bold ml-8 text-lg">{t("d. Sanctions", locale)}</h3>
        <p class="mt-3" set:html={t("tos_d_sanctions", locale)}></p>
        <br />

        <h2 class="underline text-3xl font-bold">{t("Your account", locale)}</h2>
        <p class="mt-3" set:html={t("tos_account", locale)}></p>
        <br />

        <h2 class="underline text-3xl font-bold">{t("Our content", locale)}</h2>
        <p class="mt-3" set:html={t("tos_our_content", locale)}></p>
        <br />

        <h2 class="underline text-3xl font-bold">{t("Other content", locale)}</h2>
        <p class="mt-3" set:html={t("tos_other_content", locale)}></p>
        <br />

        <h2 class="underline text-3xl font-bold">{t("Cancellation", locale)}</h2>
        <p class="mt-3" set:html={t("tos_a_cancel", locale)}></p>
        <p class="mt-3" set:html={t("tos_b_cancel", locale)}></p>
        <br />

        <h2 class="underline text-3xl font-bold">{t("Services provided", locale)}</h2>
        <p class="mt-3" set:html={t("tos_services_provided", locale)}></p>
        <br />

        <h2 class="underline text-3xl font-bold">{t("Limitations and responsibilities", locale)}</h2>
        <p class="mt-3" set:html={t("tos_lim", locale)}></p>
        <br />

        <h2 class="underline font-bold">Nota bene</h2>
        <p class="mt-3" set:html={t("tos_nota", locale)}></p>
        <br />
    </div>
</Layout>