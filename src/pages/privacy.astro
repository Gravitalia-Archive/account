---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";

const locale = `; ${Astro.request.headers.get("cookie")}`?.split(`; locale=`)[1]?.split(";")[0] ||
Astro.request.headers.get("accept-language")?.split(",")[0]?.split("-")[0] ||
"en";

import { t } from "../../Translator";
---

<Layout title={t("Privacy", locale) + " - Gravitalia Account"} absolute={false}>
    <Navbar />
    <div class="w-5/6 md:w-2/3 ml-8 md:ml-96 md:pr-16 text-dark dark:text-white">
        <br />
        <h1 class="text-4xl font-bold text-center">{t("pp", locale)}</h1>
        <br />

        <p><b>{t("tos_date", locale)}</b> 10/09/2022</p>
        <br />

        <p set:html={t("privacy_welcome", locale)}></p>
        <br />
        <br />

        <h2 class="underline text-3xl font-bold">{t("Data we collect", locale)}</h2>
        <h3 class="mt-3 font-bold ml-8 text-lg">{t("a. What you provide us with", locale)}</h3>
        <p class="mt-3 ml-8" set:html={t("privacy_a_data", locale)}></p>
        <br />
        <h3 class="mt-3 font-bold ml-8 text-lg">{t("b. What we collect", locale)}</h3>
        <p class="mt-3 ml-8" set:html={t("privacy_b_data", locale)}></p>
        <br />

        <h2 class="underline text-3xl font-bold">{t("How we use this data", locale)}</h2>
        <p class="mt-3" set:html={t("privacy_data", locale)}></p>
        <br />

        <h2 class="underline text-3xl font-bold">{t("How we share your information", locale)}</h2>
        <p class="mt-3" set:html={t("privacy_share", locale)}></p>
        <br />

        <h2 class="underline text-3xl font-bold">{t("International Data Transfers", locale)}</h2>
        <p class="mt-3" set:html={t("privacy_transfer", locale)}></p>
        <br />

        <h2 class="underline text-3xl font-bold">{t("Data retention time", locale)}</h2>
        <p class="mt-3" set:html={t("privacy_time", locale)}></p>
        <br />

        <h2 class="underline text-3xl font-bold">{t("Data protection", locale)}</h2>
        <p class="mt-3" set:html={t("privacy_protection", locale)}></p>
        <br />

        <h2 class="underline text-3xl font-bold">{t("Your choices about how your data is managed", locale)}</h2>
        <p class="mt-3" set:html={t("privacy_management", locale)}></p>
        <br />

        <h2 class="underline text-3xl font-bold">{t("Your rights", locale)}</h2>
        <p class="mt-3" set:html={t("privacy_rights", locale)}></p>
        <br />

        <h2 class="underline text-3xl font-bold">{t("Contact us", locale)}</h2>
        <p class="mt-3" set:html={t("privacy_contact", locale)}></p>
        <br />
    </div>
</Layout>